<GameInfo>
	<GlobalParameters>
	<!-- CITY -->
	
	<!-- Range of building a new city default =3 -->
		<Update>
            <Where Name="CITY_MIN_RANGE"/>
            <Set Value="4"/>
         </Update>
		 <!-- Reduced food consumption default = 2 -->
		 <Update>
            <Where Name="CITY_FOOD_CONSUMPTION_PER_POPULATION"/>
            <Set Value="1"/>
         </Update>
		 <!-- City Amenities default = 1 -->
		 <Update>
            <Where Name="CITY_AMENITIES_FOR_FREE"/>
